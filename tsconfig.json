{
  "compilerOptions": {
    // alvo do JS gerado
    "target": "ES2020",
    // libs que o TS conhece
    "lib": ["dom", "dom.iterable", "esnext"],
    // nÃ£o vamos aceitar JS solto
    "allowJs": false,
    // nÃ£o checar tipos de libs prontas
    "skipLibCheck": true,
    // TS mais rÃ­gido
    "strict": true,
    // nÃ£o emitir JS (Next cuida disso)
    "noEmit": true,
    // compatibilidade com mÃ³dulos comuns
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    // plugin do Next
    "plugins": [{ "name": "next" }],

    // ðŸ”‘ ponto importante pra vocÃª:
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
      // se vocÃª usar /src depois, basta trocar pra:
      // "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
