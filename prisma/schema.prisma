// Define o client JS que o Prisma vai gerar
generator client {
  provider = "prisma-client-js"
}

// Fonte de dados: Postgres (Neon)
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelo principal: Projects
model Project {
  id          Int      @id @default(autoincrement()) // ID auto incremental
  name        String                                     // Nome do projeto
  githubUrl   String?                                   // Link opcional para o repositório
  hostingUrl  String?                                   // Link opcional da hospedagem
  author      String?                                   // Quem criou
  apiKeyName  String                                    // Nome da API Key associada (.Edu, Projeto Desenvolve, etc.)
  createdAt   DateTime  @default(now())                 // Data de criação
  updatedAt   DateTime  @updatedAt                      // Atualiza automaticamente a cada edição
}
